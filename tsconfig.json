{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "lib": ["dom", "es2019"], 
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Ensures paths are relative to the project root
    "paths": {
      "@/*": ["src/*"] // Alias "@" for your "src" folder
    },
  },
  "include": ["src"]
}